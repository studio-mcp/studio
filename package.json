{
  "name": "@studio-mcp/studio",
  "version": "0.0.0",
  "description": "One word MCP for any CLI command",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "studio": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "bun run test && bun run build",
    "inspector": "npx @modelcontextprotocol/inspector",
    "inspector:echo": "npx @modelcontextprotocol/inspector --cli dist/index.js echo '{{text#message to echo}}' --method tools/list",
    "inspector:git": "npx @modelcontextprotocol/inspector --cli dist/index.js git '[args...]' --method tools/list"
  },
  "keywords": [
    "mcp",
    "cli",
    "tools",
    "automation",
    "command-line"
  ],
  "author": "Martin Emde <me@martinemde.com>",
  "license": "MIT",
  "homepage": "https://github.com/studio-mcp/studio",
  "repository": "studio-mcp/studio",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.2",
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
